<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/gsans_light"
        android:gravity="center"
        android:text="구체적인 상태를\n써주세요"
        android:textColor="@color/black"
        android:textSize="13pt" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:background="@drawable/textfield"
            android:padding="10dp"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/health_detail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white"
            android:fontFamily="@font/gsans_medium"
            android:hint="구체적으로 작성해주세요."
            android:inputType="text"
            android:gravity="top"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textSize="6pt"
            />
            <Button
                android:id="@+id/send_health"
                android:text="완료"
                android:backgroundTint="@color/back_color"
                android:textColor="@color/white"
                android:elevation="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>